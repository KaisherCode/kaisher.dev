---
import { ClientRouter } from "astro:transitions";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import ButtonUp from "@/components/ButtonUp.astro";
interface Props {
	title?: string;
	description: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content={Astro.props.description} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<meta property="og:title" content={title}>
		<meta property="og:description" content={Astro.props.description}>
		<meta property="og:image" content="/og-image.png">
		<meta property="og:url" content="https://kaishercode.vercel.app">
		<meta property="og:type" content="website">
		<meta property="og:site_name" content="Kaisher Dev">
		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:title" content={title}>
		<meta name="twitter:description" content={Astro.props.description}>
		<meta name="twitter:image" content="/og-image.png">
		<meta name="twitter:url" content="https://kaishercode.vercel.app">
		<ClientRouter/>
	</head>
	<body
		class="absolute top-0 z-[-2] h-screen w-screen bg-[#000000] bg-[radial-gradient(#ffffff33_1px,#00091d_1px)] bg-[size:20px_20px]"
	>
		<Header />
		<main class="mx-4">
			<slot />
		</main>
		<Footer />
		<ButtonUp />
	</body>
</html>

<style is:global>
	:root {
		color-scheme: light dark;
		--border-color: linear-gradient(to right, tomato 0%, gold 100%);
	}
	html {
		font-family: system-ui, sans-serif;
		scroll-behavior: smooth;
		overflow-x: hidden;
	}
	body {
		color: white;
		min-height: 100vh;
	}

	@media (prefers-reduced-motion: reduce) {
		html {
			scroll-behavior: auto;
		}
	}
</style>
